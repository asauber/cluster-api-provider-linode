apiVersion: "cluster.k8s.io/v1alpha1"
kind: Machine
metadata:
  generateName: node-
  labels:
    set: node
  namespace: $CLUSTER_NAME
spec:
  providerConfig:
    value:
      apiVersion: "linodeproviderconfig/v1alpha1"
      kind: "LinodeMachineProviderConfig"
      roles:
      - Node
      region: "us-east"
      type: "g6-standard-2"
      image: "linode/ubuntu18.04"
  versions:
    kubelet: 1.11.3
